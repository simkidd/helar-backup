generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Subject {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  intro      String
  name       String
  slug       String      @unique
  noteTopics NoteTopic[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("subjects")
}

model NoteTopic {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  slug      String     @unique
  title     String
  ref       String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  items     NoteItem[]
  subject   Subject?   @relation(fields: [note], references: [id])
  note      String?    @db.ObjectId

  @@map("note_topics")
}

model NoteItem {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  question  String
  answer    String
  ref       Int        @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  noteTopic NoteTopic? @relation(fields: [topic], references: [id])
  topic     String?    @db.ObjectId

  @@map("note_items")
}
