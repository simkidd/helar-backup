generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Subject {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  intro     String
  name      String
  slug      String      @unique
  NoteTopic NoteTopic[]
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("subjects")
}

model NoteTopic {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  title     String
  ref       Int      @unique
  note      Subject  @relation(fields: [subjectId], references: [id])
  subjectId String   @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("note_topics")
}

model NoteItem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  slug        String   @unique
  ref         Int      @unique
  noteTopicId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("note_items")
}
